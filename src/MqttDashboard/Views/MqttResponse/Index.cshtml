@model IEnumerable<string>
<div class="card-body">
    <h3>Log Messages</h3>
    <ul>
        @foreach (var message in Model)
        {
            <li>@message</li>
        }
    </ul>
    
</div>
@if (TempData["ErrorMessage"] != null)
{
<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Subscribe" method="post">
    <div class="form-group">
        <label for="topic">Topic</label>
        <input type="text" class="form-control" id="topic" name="topic" placeholder="Enter topic">
    </div>
    <button type="submit" class="btn btn-primary">Subscribe</button>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        function fetchMessages() {
            $.ajax({
                url: '@Url.Action("Index", "MqttResponse")',
                type: 'GET',
                success: function (data) {
                    var logMessages = $('#logMessages ul');
                    logMessages.empty();
                    data.forEach(function (message) {
                        logMessages.append('<li>' + message + '</li>');
                    });
                },
                error: function () {
                    console.error('Failed to fetch messages.');
                }
            });
        }

        // Fetch messages every 5 seconds
        setInterval(fetchMessages, 5000);

        // Initial fetch
        fetchMessages();
    });
</script>